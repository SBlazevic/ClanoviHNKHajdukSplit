@model ClanoviHNKHajdukSplit.Models.Uloga

<h1>Brisanje uloge</h1>
<br />
<h2> Uloga: <span style="color: #034ea2">@Model.UlogaNaziv</span></h2>
<h4>Jeste li sigurni u brisanje navedenog člana?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UlogaNaziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UlogaNaziv)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /><br />
        <a asp-action="Index">Natrag na popis uloga</a>
    </form>
</div>
<br />

