@model ClanoviHNKHajdukSplit.Models.Clan

<h1>Brisanje člana</h1><br />
<h2> Član: <span style="color: #034ea2">@Model.Ime @Model.Prezime</span></h2>
<h4>Jeste li sigurni u brisanje navedenog člana?</h4><br />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prezime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prezime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UlogaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uloga.UlogaNaziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClanarinaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clanarina.Vrsta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SlikaUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.SlikaUrl)" class="clan-img" width="100" height="100" alt="@Html.DisplayFor(model => model.Ime) @Html.DisplayFor(model => model.Prezime)" />
        </dd>
    </dl><br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /><br />
        <a asp-action="Index">Natrag na popis članova</a>
    </form>
</div><br />

