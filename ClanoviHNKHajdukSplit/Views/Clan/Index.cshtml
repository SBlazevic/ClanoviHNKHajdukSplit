@model IEnumerable<Clan>

<h1>Popis članova</h1><br />
<p>
    <a asp-action="Create" class="btn btn-success"> Unesi novog člana</a>
</p><br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.SlikaUrl)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Ime)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Prezime)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.UlogaId)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ClanarinaId)</th>
            <th>Radnje nad podacima</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> <img src="@Html.DisplayFor(modelItem => item.SlikaUrl)" class="clan-img" style="border-radius: 50%;" width="100" height="100" alt="@Html.DisplayFor(modelItem => item.Ime) @Html.DisplayFor(modelItem => item.Prezime)" /> </td>
                <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                <td>@Html.DisplayFor(modelItem => item.Ime)</td>
                <td>@Html.DisplayFor(modelItem => item.Prezime)</td>
                <td>@Html.DisplayFor(modelItem => item.Uloga.UlogaNaziv)</td>
                <td>@Html.DisplayFor(modelItem => item.Clanarina.Vrsta)</td>
                <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info"> Uredi</a> | <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Obriši</a></td>
            </tr>
        }
    </tbody>
</table><br />

