@model ClanoviHNKHajdukSplit.Models.Clanarina

<h1>Dodaj novu članarinu</h1>
<br />

<h4>Članarina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Vrsta" class="control-label"></label>
                <input asp-for="Vrsta" class="form-control" />
                <span asp-validation-for="Vrsta" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div><br />

            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div><br />
        </form>

    </div>

</div>

<div>
    <a asp-action="Index">Natrag na popis članarina</a>
</div>
<br />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }

}

