@model ClanoviHNKHajdukSplit.Models.Clanarina

<h1>Brisanje članarine</h1>
<br />
<h2> Članarina: <span style="color: #034ea2">@Model.Vrsta</span></h2>
<h4>Jeste li sigurni u brisanje navedene članarine?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vrsta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vrsta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cijena)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /><br />
        <a asp-action="Index">Natrag na popis članarina</a>
    </form>
</div>
<br />

